{
    "name": "console",
    "displayName": "Open in User-defined Console",
    "description": "Open console with a user-defined executable.",
    "version": "0.0.4",
    "publisher": "vilicvane",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/vilic/vscode-console"
    },
    "engines": {
        "vscode": "^0.10.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:console.open",
        "onCommand:console.openActive"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "console.open",
                "title": "Console: Open workspace in console"
            },
            {
                "command": "console.openActive",
                "title": "Console: Open directory of active file in console"
            }
        ],
        "configuration": {
            "title": "Console",
            "properties": {
                "console.executable": {
                    "type": "string",
                    "description": "Console executable path for `console.*` commands."
                },
                "console.args": {
                    "type": "array",
                    "description": "Console executable arguments for `console.*` commands."
                },
                "console.cwd": {
                    "type": "string",
                    "default": "{dirname}",
                    "description": "Console executable working directory for `console.*` command."
                }
            }
        },
        "keybindings": [
            {
                "key": "ctrl+shift+c",
                "mac": "cmd+shift+c",
                "command": "console.open"
            },
            {
                "key": "ctrl+shift+a",
                "mac": "cmd+shift+a",
                "command": "console.openActive"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
    },
    "devDependencies": {
        "typescript": "^1.6.2",
        "vscode": "0.10.x"
    }
}